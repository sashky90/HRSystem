@model IEnumerable<HRSystem.Models.Team>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create new team", "Create", null, new { @class = "btn btn-default" })
</p>

<table class="table table-striped table-hover table-bordered">
    <tr>
        <th>@Html.DisplayName("Name")</th>
        <th>@Html.DisplayName("Delivery")</th>
        <th>@Html.DisplayName("Leader")</th>
        <th>@Html.DisplayName("Project")</th>
        <th>@Html.DisplayName("Members")</th>
        <th>@Html.DisplayName("Actions")</th>
    </tr>

    @foreach (var team in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelteam => team.Name)
            </td>
            <td>
                @Html.DisplayFor(modelteam => team.Delivery)
            </td>
            <td>
                @Html.DisplayFor(modelteam => team.Leader.Name)
            </td>
            <td>
                @Html.DisplayFor(modelteam => team.Project.Name)
            </td>
            <td>
                <ul>
                    @foreach (var member in team.Members)
                    {
                        <li>@member.NamePositionAndEmail</li>
                    }
                </ul>
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a class="btn btn-default" href="@Url.Action("Edit", "Team", new { id = team.Id })">
                        Edit
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                </div>
            </td>
        </tr>
    }
</table>

<div>
    <button type="button" class="btn btn-default" name="Back" onclick="location.href='@Url.Action("Index", "Home")'">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        Back
    </button>
</div>

